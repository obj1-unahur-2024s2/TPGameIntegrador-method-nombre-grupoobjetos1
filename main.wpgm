import disparo.*
import jugador.*
import enemigo.*
import wollok.game.*

program Main {
  game.width(13)
  game.height(13)

  nivel1.iniciar()

  game.start()
} 


object nivel1 {
  method iniciar() {
    game.addVisual(jugador)
    jugador.controlar()

    const enemigo1 = new Enemigo(id = 1, position = game.at(6, 12), vida = 3, velocidad = 300)
    enemigo1.iniciar()

    game.boardGround("Background_forest.png")
  }
}
